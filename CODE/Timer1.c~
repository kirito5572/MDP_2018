#include <mega128.h>
 unsigned char led = 0xfe;
void main(void) {
    DDRC = 0xff;
    PORTC = led;
    TCNT0 = 0;
    TIMSK = 0x01;
    TCCR0 = 0x07;
    SREG = 0x80;
    while (1)
        {
    
        }
}
interrupt [TIM0_OVF] void timer_count() {
    led <<= 1;
    led |= 0x01;
    if(led == 0xff) {
        led = 0xfe;
    }
    PORTC = led;
}
